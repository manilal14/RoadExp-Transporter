<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewVehicle.AVFrag1">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_bold"
            android:text="Driver Info"
            android:textColor="@color/light_red_gradient"
            android:textSize="20dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/lato_bold"
            android:text="Name"
            android:textSize="16dp" />

        <EditText
            style="@style/edit_text_style_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_below="@id/spinner_select_driver"
            android:background="@drawable/line_gradient" />


        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Age"
                    android:textSize="16dp" />

                <EditText
                    style="@style/edit_text_style_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:layout_marginTop="8dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@id/spinner_select_driver"
                    android:background="@drawable/line_gradient" />





            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_marginLeft="24dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="@font/lato_bold"
                    android:text="Gender"
                    android:textSize="16dp" />

                <RadioGroup
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    style="@style/edit_text_style_1">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="M"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="16dp"/>


                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="F"
                            android:scaleX="0.8"
                            android:scaleY="0.8"
                            android:layout_marginLeft="16dp"
                            android:fontFamily="@font/lato_bold"
                            android:textSize="16dp"/>


                    </LinearLayout>



                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@id/spinner_select_driver"
                    android:background="@drawable/line_gradient" />





            </LinearLayout>


        </LinearLayout>



        <ImageView
            android:id="@+id/fard_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="end"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/cross_circle"
            android:padding="12dp"
            android:src="@drawable/arrow_farward" />


    </LinearLayout>


</FrameLayout>