<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginSingUp.OtpPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:paddingTop="16dp"
            android:paddingLeft="16dp"
            android:background="@mipmap/banner_otp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="32dp"
                android:layout_height="24dp"
                android:src="@drawable/arrow_back_black" />

            <TextView
                android:id="@+id/text"
                android:layout_marginTop="-8dp"
                android:layout_marginLeft="40dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="@string/verify_your_identity"/>



        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="50dp"
            android:scrollbars="none">

            <LinearLayout
                android:layout_marginLeft="32dp"
                android:layout_marginRight="24dp"
                android:layout_marginTop="32dp"
                android:paddingBottom="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <!--Otp field-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enter OTP"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16dp"/>

                <LinearLayout
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et1"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et2"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et3"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et4"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et5"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/et6"
                            android:maxLength="1"
                            android:textAlignment="center"
                            android:inputType="number"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            style="@style/edit_text_style_1"/>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:background="@drawable/line_gradient"/>
                    </LinearLayout>





                </LinearLayout>

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Set Password"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/password"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="66dp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/edit_text_style_1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginRight="66dp"
                    android:background="@drawable/line_gradient"
                    android:layout_below="@id/spinner_select_driver"/>

                <TextView
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm Password"
                    android:fontFamily="@font/lato_bold"
                    android:textSize="16dp"/>
                <EditText
                    android:id="@+id/confirm_password"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_marginRight="66dp"
                    android:inputType="textPassword"
                    android:layout_height="wrap_content"
                    style="@style/edit_text_style_1"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginRight="66dp"
                    android:background="@drawable/line_gradient"
                    android:layout_below="@id/spinner_select_driver"/>


            </LinearLayout>


        </ScrollView>



    </LinearLayout>

    <TextView
        android:id="@+id/confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Confirm"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:fontFamily="@font/lato_bold"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:background="@drawable/line_gradient"/>

</FrameLayout>