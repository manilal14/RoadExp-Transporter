<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/whole_page"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VehicleDetailPackage.FragMapDriver">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_marginLeft="24dp"
            android:elevation="8dp"
            android:layout_gravity="center|start"
            android:background="@drawable/cross_circle"
            android:padding="12dp"
            android:src="@drawable/arrow_back" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            app:cardCornerRadius="12dp"
            app:cardUseCompatPadding="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="24dp"
                android:paddingRight="8dp"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tata Ace"
                        android:fontFamily="@font/lato_black"
                        android:textColor="@color/black"
                        android:textSize="24sp"/>

                    <TextView
                        android:layout_marginTop="8dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="JHBR41253"
                        android:textSize="12sp"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/yellow_gradient"/>






                </LinearLayout>


                <TextView
                    android:layout_marginTop="44dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Map Driver"
                    android:textColor="@color/light_red_gradient"
                    android:textSize="24dp"
                    android:fontFamily="@font/lato_bold"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Select Driver"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="12dp"
                    android:fontFamily="@font/lato_regular"
                    android:textSize="16dp"/>

                <RelativeLayout
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="12dp"
                    android:layout_weight=".28"
                    android:background="@drawable/spinner_background"
                    android:orientation="horizontal">

                    <Spinner
                        android:id="@+id/spinner_select_driver"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:spinnerMode="dropdown" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:background="@drawable/line_gradient"
                        android:layout_below="@id/spinner_select_driver"/>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/drop_down" />



                </RelativeLayout>








                <ImageView
                    android:id="@+id/ok"
                    android:layout_marginTop="56dp"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/circle"
                    android:padding="8dp"
                    android:layout_gravity="right"
                    android:src="@drawable/tick" />














            </LinearLayout>


        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>