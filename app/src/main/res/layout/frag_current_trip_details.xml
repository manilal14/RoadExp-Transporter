<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/whole_page"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".VehicleDetailPackage.FragTravelDetails">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginLeft="24dp"
                android:elevation="8dp"
                android:layout_gravity="center|start"
                android:background="@drawable/cross_circle"
                android:padding="12dp"
                android:src="@drawable/arrow_back" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="12dp"
                app:cardUseCompatPadding="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="24dp"
                    android:paddingRight="8dp"
                    android:paddingTop="24dp"
                    android:paddingBottom="8dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/vehicle_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tata Ace"
                                android:fontFamily="@font/lato_black"
                                android:textColor="@color/black"
                                android:textSize="24sp"/>

                            <TextView
                                android:id="@+id/vehicle_number"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="JHBR41253"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/yellow_gradient"/>


                        </LinearLayout>


                    </LinearLayout>


                    <TextView
                        android:id="@+id/date"
                        android:layout_marginTop="16dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:fontFamily="@font/lato_bold"
                        android:textColor="@color/black"
                        android:textSize="16dp"/>

                    <LinearLayout
                        android:layout_marginTop="12dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From"
                                android:textSize="20sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/from"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <ImageView
                            android:layout_weight="1"
                            android:layout_width="54dp"
                            android:layout_height="54dp"
                            android:src="@drawable/truck"
                            android:layout_marginRight="8dp"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="To"
                                android:textSize="20sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/to"
                                android:layout_marginTop="8dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_regular"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="44dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Intermediate  :"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/distance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:singleLine="true"
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Driver  :"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/driver"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Weight  :"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/weight"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="4dp"
                            android:paddingBottom="16dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Amount  :"
                                android:textSize="16sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/light_red_gradient"/>

                            <TextView
                                android:id="@+id/amount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:layout_marginLeft="12dp"
                                android:lineSpacingExtra="4dp"
                                android:textSize="12sp"
                                android:fontFamily="@font/lato_bold"
                                android:textColor="@color/black"/>



                        </LinearLayout>

                    </LinearLayout>


                </LinearLayout>




            </android.support.v7.widget.CardView>


        </LinearLayout>

        <ProgressBar
            android:id="@+id/progress_bar"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>



    </FrameLayout>





</FrameLayout>