<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewVehicle.AVFrag2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Documentation"
                android:textColor="@color/light_red_gradient"
                android:textSize="20dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        style="@style/edit_text_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Vehicle Pic"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_below="@id/spinner_select_driver"
                        android:background="@drawable/line_gradient"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/folder1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/folder"/>


                <ImageView
                    android:id="@+id/camera1"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/camera"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        style="@style/edit_text_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="R.C Pic Front"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_below="@id/spinner_select_driver"
                        android:background="@drawable/line_gradient"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/folder2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/folder"/>


                <ImageView
                    android:id="@+id/camera2"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/camera"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <EditText
                        style="@style/edit_text_style_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="R.C Pic Back"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_below="@id/spinner_select_driver"
                        android:background="@drawable/line_gradient"/>


                </LinearLayout>

                <ImageView
                    android:id="@+id/folder3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/circle"
                    android:padding="12dp"
                    android:src="@drawable/folder"/>


                <ImageView
                    android:id="@+id/camera3"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="end"
                    android:layout_marginLeft="8dp"
                    android:background="@drawable/circle"
                    android:padding="10dp"
                    android:src="@drawable/camera"/>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="44dp">

                <ImageView
                    android:id="@+id/back_btn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/cross_circle"
                    android:padding="12dp"
                    android:src="@drawable/arrow_back" />

                <ImageView
                    android:id="@+id/fard_btn"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_alignParentEnd="true"
                    android:background="@drawable/cross_circle"
                    android:padding="12dp"
                    android:src="@drawable/arrow_farward" />


            </RelativeLayout>





        </LinearLayout>


    </ScrollView>







</FrameLayout>