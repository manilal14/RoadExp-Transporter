<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddNewVehicle.AVFrag1">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/lato_bold"
                android:text="Vehicle Info"
                android:textColor="@color/light_red_gradient"
                android:textSize="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="Vehicle Type"
                android:textSize="16dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight=".28"
                android:background="@drawable/spinner_background">

                <Spinner
                    android:id="@+id/spinner_vehicle_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@id/spinner_vehicle_type"
                    android:background="@drawable/line_gradient" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/drop_down" />


            </RelativeLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="Permit Type"
                android:textSize="16dp" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_weight=".28"
                android:background="@drawable/spinner_background">

                <Spinner
                    android:id="@+id/spinner_permit_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:spinnerMode="dropdown" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_below="@id/spinner_permit_type"
                    android:background="@drawable/line_gradient" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/drop_down" />


            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="Vehicle Number"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/vehicle_number"
                style="@style/edit_text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/spinner_select_driver"
                android:background="@drawable/line_gradient" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="Insurance Number"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/insurance_number"
                style="@style/edit_text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:layout_marginTop="8dp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/spinner_select_driver"
                android:background="@drawable/line_gradient" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/lato_bold"
                android:text="RC expire"
                android:textSize="16dp" />
            <EditText
                android:id="@+id/rc_expire"
                style="@style/edit_text_style_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:focusable="false"
                android:inputType="date"
                android:longClickable="false" />
            <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_below="@id/spinner_select_driver"
                android:background="@drawable/line_gradient" />













            <ImageView
                android:id="@+id/fard_btn"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_gravity="end"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="44dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/cross_circle"
                android:padding="12dp"
                android:src="@drawable/arrow_farward" />


        </LinearLayout>


    </ScrollView>





</FrameLayout>