<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="2 Ton"
                    android:textSize="10sp"
                    style="@style/button_style_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="HouseHold"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginLeft="12dp"
                    style="@style/button_style_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 Stops"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginLeft="12dp"
                    style="@style/button_style_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10Km"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:layout_marginLeft="12dp"
                    style="@style/button_style_2"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/from_address_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kallamessary"
                        android:fontFamily="@font/lato_black"
                        android:textColor="@color/black"/>

                    <TextView
                        android:id="@+id/from_address_line2"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kochi, Kerala"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"/>


                </LinearLayout>

                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:src="@drawable/arrow_long"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/to_address_line1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kallamessary"
                        android:fontFamily="@font/lato_black"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_marginTop="2dp"
                        android:id="@+id/to_address_line2"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kochi, Kerala"
                        android:fontFamily="@font/lato_regular"
                        android:textColor="@color/black"/>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Expand intermediate locations"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_regular"
                    android:backgroundTint="@color/yellow_gradient"
                    style="@style/button_style_2"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="16dp"
                    android:ellipsize="end"
                    android:layout_height="wrap_content"
                    android:text="Shivam Kumar"
                    android:textColor="@color/black"
                    android:fontFamily="@font/lato_black"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>