<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingTop="16dp"
            android:paddingRight="12dp"
            android:paddingBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date"
                    style="@style/button_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="14/02/2019"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/stops"
                    style="@style/button_style_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:text="3 Stops"
                    android:textSize="10sp" />

                <TextView
                    android:id="@+id/driver"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/lato_black"
                    android:text="Shivam Kumar"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/from_address_line1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Kallamessary"
                    android:textColor="@color/black" />


                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/arrow_long" />


                <TextView
                    android:id="@+id/to_address_line1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_black"
                    android:text="Kallamessary"
                    android:textColor="@color/black" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_left_only_black"
                    android:backgroundTint="@color/yellow_gradient"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Fare"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/total_fare"
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_right_only_black"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Rs.16000"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_left_only_black"
                    android:backgroundTint="@color/yellow_gradient"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Driver Cut"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/driver_cut"
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_right_only_black"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Rs.16000"
                    android:textColor="@color/white" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/remaining_text"
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_left_only_black"
                    android:backgroundTint="@color/yellow_gradient"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Remaining"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/remaining"
                    style="@style/button_style_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_right_only_black"
                    android:fontFamily="@font/lato_black"
                    android:gravity="center"
                    android:text="Rs.16000"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>


</FrameLayout>